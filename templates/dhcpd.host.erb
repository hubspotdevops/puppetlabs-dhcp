host <%= host %> {
  hardware ethernet   <%= mac %>;
  fixed-address       <%= ip %>;
<% if @nextserver -%>
  next-server         <%= @nextserver %>;
<% end -%>
<% if @filename -%>
  filename            "<%= @filename %>";
<% end -%>
<% if @set_option_hostname -%>
  option host-name    "<%= host %>";
<% end -%>
}
